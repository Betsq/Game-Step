@model Game_Step.IdentityViewModels.UserChangePasswordViewModel
@{
    ViewBag.Title = "Change password - " + Model.Email;
}
<div class="container">
    <h2>Change password for a user @Model.Email</h2>
    <form asp-action="ChangePassword" asp-controller="Users">
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" asp-for="Id" readonly />
        <input type="hidden" asp-for="Email" readonly />

        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">New password</label>
            <input type="text" asp-for="NewPassword" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-dark" />
        </div>
    </form>
</div>
