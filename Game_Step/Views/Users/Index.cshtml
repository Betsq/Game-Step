@model IEnumerable<Game_Step.Models.User>

@{
    ViewBag.Title = "Control panel users";
}

<div class="container">
    <a asp-action="Create">Add user</a>

    <table class="table">
        <tr><th>Email</th><th></th></tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Delete" asp-controller="Users" asp-route-id="@user.Id" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-controller="Users" asp-route-id="@user.Id">Change</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>
