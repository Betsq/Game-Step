@{
    ViewBag.Title = "Control Panel";
}

<div class="container">
    <div class="col-md-12 mb-3">
        <a asp-action="Index" asp-controller="Developer">Panel developer</a>
    </div>
    <div class="col-md-12 mb-3">
        <a asp-action="Index" asp-controller="Publisher">Panel publisher</a>
    </div>
    <div class="col-md-12 mb-3">
        <a asp-action="Index" asp-controller="Region">Panel region</a>
    </div>
    <div class="col-md-12 mb-3">
        <a asp-action="Index" asp-controller="Game">Panel game</a>
    </div>
    <div class="col-md-12 mb-3">
        <a asp-action="AddKey" asp-controller="GameKey">Adding keys for the game</a>
    </div>
    <div class="col-md-12 mb-3">
        <a asp-action="Index" asp-controller="Category">Panel Category</a>
    </div>
    <div class="col-md-12 mb-3">
        <a asp-action="Index" asp-controller="Tag">Panel tag</a>
    </div>
    <div class="col-md-12 mb-3">
        <a asp-controller="Slider" asp-action="Index">Управление слайдером</a>
    </div>
    <div class="col-md-12 mb-3">
        <a asp-controller="Users" asp-action="Index">All Users</a>
    </div>
    <div class="col-md-12 mb-3">
        <a asp-controller="Roles" asp-action="Index">Roles</a>
    </div>


    <ul>
        @if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile">Profile</a>
            </li>
            <li class="nav-item">
                <p>@User.Identity.Name</p>
            </li>
            <li class="nav-item">
                <form method="post" asp-controller="Account" asp-action="Logout">
                    <input type="submit" value="Logout" />
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Sign in</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
            </li>
        }
    </ul>

</div>
