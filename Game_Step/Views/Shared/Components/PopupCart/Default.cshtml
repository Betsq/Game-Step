@model IEnumerable<Game_Step.Models.Cart>

@{
    Layout = "/Views/Shared/Components/PopupCart/_CartLayout.cshtml";
}
<div class="popup" id="popup-1">
    <div class="overlay"></div>
    <div class="content">
        <div class="close-btn" onclick="togglePopup()">&times;</div>
        <h1>Корзина покупок</h1>
        <p>
            <h4>Список покупок</h4>
            @foreach (var prod in Model)
            {
                <div class="col-md-12">
                    <button class="btnDelProdCart" type="button" del-data-id="@prod.Id">Remove</button>
                </div>
                <div class="col-md-12">@prod.Name</div>
                @if (prod.IsDiscount)
                {
                    <div class="col-md-12">@prod.DiscountPrice</div>
                }
                else
                {
                    <div class="col-md-12">@prod.Price</div>
                }

            }

        <a asp-action="Index" asp-controller="Cart"> В КОРЗИНУ</a>
        </p>
    </div>
</div>